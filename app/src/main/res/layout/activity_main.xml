<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindmatchapp.imagepicker.MainActivity">


    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="gallery(1)" />
    <Button
        android:id="@+id/btnSelectGallery"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnSelectImage"
        android:text="gallery(2)" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="camera"
        android:layout_below="@id/btnSelectImage"/>

    <TextView
        android:id="@+id/tvNaratives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Ovde je text sta i kako se radi ..."
        android:layout_below="@id/btnCamera"/>


    <ImageView
        android:id="@+id/imgMatrix"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="matrix"
        android:src="@drawable/by100"
        android:layout_marginBottom="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvNaratives"/>


    <Button
        android:id="@+id/btnClock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2dp"
        android:background="@drawable/clockwise"
        android:layout_below="@id/imgMatrix"/>
    <Button
        android:id="@+id/btnCounter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="2dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/counterclockwise"
        android:layout_below="@id/imgMatrix"/>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/savebutton"
        android:layout_toRightOf="@+id/btnClock"
        android:layout_toLeftOf="@id/btnCounter"
        android:layout_below="@id/imgMatrix"/>


    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_toRightOf="@+id/btnClock"
        android:layout_toLeftOf="@id/btnCounter"
        android:layout_below="@id/btnSave"/>


</RelativeLayout>
